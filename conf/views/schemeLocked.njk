{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}
{% from "macros/returnLink.njk"                    import returnLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}


{% block pageTitle %}
  {{ title(messages("messages__scheme__locked__title",schemeType)) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">{{ messages("messages__scheme__locked__heading", schemeName) }}</h1>

        <p class="govuk-body">{{ messages("messages__scheme__locked__p", schemeType) }}</p>

        {{ govukButton({
                 href: returnUrl,
                 attributes: {id: "submit"},
                 text: messages("messages__scheme__locked__link", schemeType)
          }) }}
      </div>
    </div>

{% endblock %}
