{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                          import title %}
{% from "macros/returnLink.njk"                     import returnLink %}
{% from "govuk/components/button/macro.njk"         import govukButton %}
{% from "govuk/components/error-summary/macro.njk"  import govukErrorSummary %}
{% from "govuk/components/input/macro.njk"          import govukInput %}

{% if paragraphs|length %}
    {% set hint  %}
     {% for paragraph in paragraphs %}
        <p class="govuk-body govuk-!-font-weight-regular">
            {{ paragraph }}
        </p>
        {% endfor %}
    {% endset %}
     {% elif hintText %}
         {% set hint  %}
          {{hintText}}
         {% endset %}
      {% endif %}
{% block pageTitle %}
    {{ title(pageTitle, form.errors) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            {% if form.errors.length > 0 %}
                {{ govukErrorSummary({
                    "titleText": messages("error.summary.title"),
                    "errorList": form.errors
                }) }}
            {% endif %}

            <form method="post"
                  autocomplete="off"
                  action="{{ submitUrl }}"
                  novalidate>

                {{ csrf() | safe }}
                {% if hint|length %}
                {{ govukInput({
                                    label: {
                                        text: pageHeading,
                                        isPageHeading: true,
                                        classes: "govuk-label--xl govuk-!-margin-bottom-8"
                                    },
                                    id: "value",
                                    name: "value",
                                    value: form.value.value,
                                    classes: "govuk-input--width-10",
                                    attributes: {
                                        autocomplete: "off"
                                    },
                                    errorMessage: form.value.error,
                                    hint: {
                                        html: hint
                                    }
                                }) }}
                {% endif %}

                {{ govukButton({
                    attributes: {id: "submit"},
                    text: messages("site.save_and_continue")
                }) }}

            </form>
        </div>
    </div>

    {{ returnLink(schemeName) }}

{% endblock %}
