{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("postcode.title", messages(entityType)), form.errors) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ viewmodel.submitUrl }}" method="post" autocomplete="off" novalidate>

          {{ csrf() | safe }}

          {{ govukInput({
            label: {
              text: messages('postcode.title', entityName),
              isPageHeading: true,
              classes: "govuk-label--xl"
            },
            id: "value",
            name: "value",
            value: form.value.value,
            classes: "govuk-input--width-10",
            attributes: {autocomplete: "off"},
            errorMessage: form.value.error
          }) }}
         <p class="govuk-body">
                    {{ messages("postcode.youCan") }} <a href="{{ enterManuallyUrl }}" class="govuk-link">{{ messages("address.linkText.enterManually") }}</a>.
                 </p>
          {{ govukButton({
            text: messages("findAddress"),
            attributes: {id: "submit"}
          }) }}

        </form>

      </div>
    </div>

    <p class="govuk-body"><a href="{{ returnUrl }}" class="govuk-link">{{ messages("site.return.to", schemeName) }}</a>
    </p>

{% endblock %}
