{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/radios/macro.njk"        import govukRadios %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("addressList.title", messages(entityType)), form.errors) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <h1 class="govuk-heading-xl">{{messages('addressList.title', entityName)}}</h1>

        <p class="govuk-body">
          {{ messages("addressList.select") }} <a href="{{ enterManuallyUrl }}" class="govuk-link">{{ messages("address.linkText.enterManually") }}</a>.
        </p>

        <form action="{{ submitUrl }}" method="post" autocomplete="off" novalidate>

          {{ csrf() | safe }}

          {{ govukRadios({
            name: 'value',
            fieldset: {
              legend: {
                text: messages('addressList.h1', entityName),
                isPageHeading: false,
                classes: "govuk-fieldset__legend--xl govuk-visually-hidden"
              }
            },
            items: addresses,
            errorMessage: form.value.error
          }) }}

          {{ govukButton({
            text: messages("site.save_and_continue"),
            attributes: {id: "submit"}
          }) }}

        </form>

      </div>
    </div>

{% endblock %}
