{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/radios/macro.njk"        import govukRadios %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}
{% from "macros/returnLink.njk"                    import returnLink %}

{% block pageTitle %}
  {{ title(messages("messages__workingKnowledge__title"), form.errors) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}


        <form method="post" autocomplete="off" novalidate >

          {{ csrf() | safe }}

          <h1 class="govuk-heading-xl">{{ messages('messages__workingKnowledge__title') }}</h1>
            <p id="p1" class="govuk-body">{{ messages("messages__workingKnowledge__p1") }}</p>
            <p id="p2" class="govuk-body">{{ messages("messages__workingKnowledge__p2") }}</p>
            <p id="p3" class="govuk-body">{{ messages("messages__workingKnowledge__p3") }}</p>

          {{ govukRadios({
            classes: "govuk-radios--inline",
            name: 'value',
            fieldset: {
              legend: {
                isPageHeading: false,
                classes: "govuk-fieldset__legend--xl"
              }
            },
            items: radios,
            errorMessage: form.value.error
          }) }}

          {{ govukButton({
            text: messages("site.save_and_continue"),
            attributes: {id: "submit"}
          }) }}

        </form>

      </div>
    </div>
    {{ returnLink(schemeName) }}
{% endblock %}
