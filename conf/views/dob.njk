{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                          import title %}
{% from "macros/returnLink.njk"                     import returnLink %}
{% from "govuk/components/button/macro.njk"         import govukButton %}
{% from "govuk/components/date-input/macro.njk"     import govukDateInput %}
{% from "govuk/components/error-summary/macro.njk"  import govukErrorSummary %}

{% block pageTitle %}
    {{ title(messages("messages__dob__title", entityType)) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            {% if form.errors.length > 0 %}
                {{ govukErrorSummary({
                    "titleText": messages("error.summary.title"),
                    "errorList": form.errors
                }) }}
            {% endif %}

            <form method="post"
                  autocomplete="off"
                  action="{{ submitUrl }}"
                  novalidate>

                {{ csrf() | safe }}

                {{ govukDateInput({
                    id: "establisherDOB",
                    fieldset: {
                        legend: {
                            text: messages("messages__dob__title", name),
                            isPageHeading: true,
                            classes: "govuk-fieldset__legend--xl govuk-!-margin-bottom-8"
                        }
                    },
                    errorMessage: date.error,
                    items: date.items,
                    hint: {
                        text: messages("messages__dob__hint")
                    }
                }) }}

                {{ govukButton({
                    attributes: {id: "submit"},
                    text: messages("site.save_and_continue")
                }) }}

            </form>
        </div>
    </div>

    {{ returnLink(schemeName) }}

{% endblock %}
