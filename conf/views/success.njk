{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% block beforeContent %}
  {% include "includes/phase-banner.njk" %}
{% endblock %}

{% block pageTitle %}
  {{ title(messages("messages__complete__title")) }}
{% endblock %}

{% set statusLink %}
   <a href="{{ yourSchemesLink }}">{{messages("messages__complete__copy_2_link")}}</a>
{% endset %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {{ govukPanel({
                titleText: messages("messages__complete__heading"),
                html: panelHtml
        }) }}
        <p class="govuk-body">
            {{messages("messages__complete__email")}}
            <span class="govuk-!-font-weight-bold">{{email}}</span>.
        </p>


        <h2 class="govuk-heading-m">{{messages("messages__complete__copy_1")}}</h2>
         <p class="govuk-body">{{messages("messages__complete__copy_2", statusLink) | safe}}</p>


        <h2 class="govuk-heading-m">{{ messages("messages__complete__what_happens_next") }}</h2>

            <p>{{ messages("messages__complete__copy_3") }}</p>
            <p>{{ messages("messages__complete__copy_4") }}</p>
            <p>{{ messages("messages__complete__copy_5") }}</p>

        <h2 class="govuk-heading-m">{{ messages("site.saveOrPrint") }}</h2>

        <p class="govuk-body"><a class="govuk-link print-this-page" href="#">{{ messages("site.printThisPage") }}</a></p>

        {{ govukButton({
            href: submitUrl,
            attributes: {id: "submit"},
            text: messages("site.signOut")
          }) }}
      </div>
    </div>

{% endblock %}
