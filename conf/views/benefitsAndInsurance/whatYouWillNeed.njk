{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("benefitsAndInsurance.title", schemeName)) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

          {{ csrf() | safe }}

          <h1 class="govuk-heading-xl">{{messages('benefitsAndInsurance.title', schemeName)}}</h1>

          <p class="govuk-body">
            {{ messages("benefitsAndInsurance.p1") }}
          </p>

          <ul class="govuk-list govuk-list--bullet">
            <li>{{ messages("benefitsAndInsurance.p1b1") }}</li>
            <li>{{ messages("benefitsAndInsurance.p1b2") }}</li>
            <li>{{ messages("benefitsAndInsurance.p1b3") }}</li>
            <li>{{ messages("benefitsAndInsurance.p1b4") }}</li>
          </ul>

          <p class="govuk-body">
            {{ messages("benefitsAndInsurance.p2") }}
          </p>

          <ul class="govuk-list govuk-list--bullet">
            <li>{{ messages("benefitsAndInsurance.p2b1") }}</li>
            <li>{{ messages("benefitsAndInsurance.p2b2") }}</li>
            <li>{{ messages("benefitsAndInsurance.p2b3") }}</li>
            <li>{{ messages("benefitsAndInsurance.p2b4") }}</li>
          </ul>

          {{ govukButton({
            text: messages("site.continue"),
            attributes: {id: "submit"}
          }) }}


      </div>
    </div>

{% endblock %}
