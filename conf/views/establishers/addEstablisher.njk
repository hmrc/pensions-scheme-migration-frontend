{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/radios/macro.njk"        import govukRadios %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "macros/title.njk"                         import title %}
{% from "macros/returnLink.njk"                    import returnLink %}

{% block pageTitle %}
    {{ title(messages("messages__addEstablisher_title"), form.errors) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            {% if form.errors.length > 0 %}
                {{ govukErrorSummary({
                    "titleText": messages("error.summary.title"),
                    "errorList": form.errors
                }) }}
            {% endif %}

            <form method="post" autocomplete="off" novalidate>

                {{ csrf() | safe }}

                <h1 id="addEstablisher_h1" class="govuk-heading-xl">{{ messages('messages__addEstablisher_title') }}</h1>
                {% if incompleteTable.rows.length > 0 %}
                    <div role="region" class="govuk-!-margin-bottom-10">
                        {{ govukTable(incompleteTable) }}
                    </div>
                {% endif %}
                {% if completeTable.rows.length > 0 %}
                     <div role="region" class="govuk-!-margin-bottom-7">
                         {{ govukTable(completeTable) }}
                     </div>
                {% endif %}
                {{ govukRadios({
                    classes: "govuk-radios--inline",
                    name: 'value',
                    fieldset: {
                        legend: {
                            text: messages('messages__addEstablisher_radio_label'),
                            isPageHeading: false,
                            classes: "govuk-fieldset__legend--s"
                        }
                    },
                    items: radios,
                    errorMessage: form.value.error
                }) }}

                {{ govukButton({
                    text: messages("site.save_and_continue"),
                    attributes: {id: "submit"}
                }) }}

            </form>

        </div>
    </div>

    {{ returnLink(schemeName) }}

{% endblock %}
