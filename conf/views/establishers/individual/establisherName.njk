{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}
{% from "macros/returnLink.njk"                    import returnLink %}

{% block pageTitle %}
  {{ title(messages("messages__establisher__name_title"), form.errors) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

         <h1 class="govuk-heading-xl">{{messages('messages__establisher__name_title')}}</h1>

        <form method="post" autocomplete="off" novalidate>

          {{ csrf() | safe }}

           {{ govukInput({
                      label: {
                        text: messages('firstName.label'),
                        isPageHeading: false,
                        classes: "govuk-label--s"
                      },
                      id: "firstName",
                      name: "firstName",
                      value: form.firstName.value,
                      classes: "govuk-input--width-20",
                      attributes: {autocomplete: "off"},
                      errorMessage: form.firstName.error
                    }) }}

                  {{ govukInput({
                    label: {
                      text: messages('lastName.label'),
                      isPageHeading: false,
                      classes: "govuk-label--s"
                    },
                    id: "lastName",
                    name: "lastName",
                    value: form.lastName.value,
                    classes: "govuk-input--width-20",
                    attributes: {autocomplete: "off"},
                    errorMessage: form.lastName.error
                  }) }}

          {{ govukButton({
            text: messages("site.save_and_continue"),
            attributes: {id: "submit"}
          }) }}

        </form>

      </div>
    </div>

     {{ returnLink(schemeName) }}

{% endblock %}
